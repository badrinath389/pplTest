{
  "swagger": {
    "basePath": "/api",
    "entryFile": "./src/routes/routes.ts",
    "outputDirectory": "./build/swagger",
    "specMerging": "recursive",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "spec": {}
  },
  "routes": {
    "basePath": "/api",
    "entryFile": "./src/controllers/index.ts",
    "routesDir": "./src/routes",
    "middleware": "hapi"
  }
}